<script>
	$(document).ready(function(){
		$(".first-list").hover(
			function(){
				$(this).css("background-color","#fff").children(".second-list").show();
			},
			function(){
				$(this).css("background-color","#f2f2f2").children(".second-list").hide();
			}
		)
	})
</script>
<script>
	function showDetail(id){
		$(".information-top .photo").hide();
		$("#view" + id).show();

		var watchUrl = $('#view' + id + ' a').attr('href');
		$('.class-information' + ' .btnP a').attr('href', watchUrl);
	}
	showDetail(0);
	$(document).ready(function(){
		events.addEvent(window,"load",function(){
			scrollHori.init();
			autoPlay.init();
		});
		$("#rollList li:first").addClass("selected");
		$("#rollList li").click(function(){
			$(this).addClass("selected").siblings("li").removeClass("selected");
		});
		
		//登陆、记录弹出框
		$("#login").click(function(event){
			event.stopPropagation();
			$(".loginTip").toggle();
			$("#login").toggleClass("selected");
		});
		$("#record").click(function(event){
			event.stopPropagation();
			$(".recordTip").toggle();
			$("#record").toggleClass("selected");
		});
		$("body").click(function(){
			if($(".loginTip")){
				$(".loginTip").css("display","none");
				$(".recordTip").css("display","none");
				$("#login").removeClass("selected");
				$("#record").removeClass("selected");
			} else {
				$("#login").addClass("selected");
				$("#record").addClass("selected");
			}
		})
	});
</script>
